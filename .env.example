# Supply-Bot Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/supplybot"
REDIS_URL="redis://localhost:6379"

# ===========================================
# AI/LLM CONFIGURATION (Grok / xAI)
# ===========================================
GROK_API_KEY="xai-your-grok-api-key"
GROK_MODEL="grok-beta"
GROK_BASE_URL="https://api.x.ai/v1"

# ===========================================
# EMAIL CONFIGURATION (for Diplomat Agent)
# ===========================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="procurement@yourcompany.com"
EMAIL_FROM_NAME="Supply-Bot Procurement"

# ===========================================
# API CONFIGURATION
# ===========================================
API_PORT=3001
API_SECRET="your-super-secret-jwt-key"
API_CORS_ORIGIN="http://localhost:3000"

# ===========================================
# AGENT CONFIGURATION
# ===========================================
# Scout Agent - How often to scan suppliers (in minutes)
SCOUT_SCAN_INTERVAL=60
SCOUT_MAX_CONCURRENT_SCANS=5

# Strategist Agent - Prediction threshold (days before stockout to alert)
STRATEGIST_STOCKOUT_THRESHOLD_DAYS=14
STRATEGIST_ANALYSIS_INTERVAL=30

# Diplomat Agent - Negotiation settings
DIPLOMAT_MAX_NEGOTIATION_ROUNDS=3
DIPLOMAT_PRICE_IMPROVEMENT_TARGET=0.05

# ===========================================
# INTEGRATION / BROWSER AUTOMATION
# ===========================================
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# ===========================================
# COOPERATIVE / FEDERATION (Future)
# ===========================================
FEDERATION_ENABLED=false
FEDERATION_API_URL="https://cooperative.supplybot.io"
FEDERATION_ORG_ID=""

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL="info"
LOG_FORMAT="json"
