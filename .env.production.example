# Supply-Bot Production Environment Configuration
# Copy this file to .env.production and fill in production values

# ===========================================
# DATABASE (Use a managed PostgreSQL service)
# ===========================================
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/supplybot_prod"
REDIS_URL="redis://HOST:6379"

# ===========================================
# AI/LLM CONFIGURATION (Grok / xAI)
# ===========================================
GROK_API_KEY="your-production-grok-api-key"
GROK_MODEL="grok-beta"
GROK_BASE_URL="https://api.x.ai/v1"

# ===========================================
# EMAIL CONFIGURATION (Production SMTP)
# ===========================================
# For Gmail: Use App Password, not your regular password
# For other providers: Use appropriate SMTP settings
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_SECURE=false
EMAIL_FROM="procurement@yourcompany.com"
EMAIL_FROM_NAME="Supply-Bot Procurement"

# ===========================================
# API CONFIGURATION
# ===========================================
API_PORT=3001
# IMPORTANT: Generate a strong random secret for production!
# Example: openssl rand -hex 32
API_SECRET="generate-a-strong-random-secret-here"
API_CORS_ORIGIN="https://yourdomain.com"

# ===========================================
# AGENT CONFIGURATION
# ===========================================
SCOUT_SCAN_INTERVAL=60
SCOUT_MAX_CONCURRENT_SCANS=3

STRATEGIST_STOCKOUT_THRESHOLD_DAYS=14
STRATEGIST_ANALYSIS_INTERVAL=30

DIPLOMAT_MAX_NEGOTIATION_ROUNDS=3
DIPLOMAT_PRICE_IMPROVEMENT_TARGET=0.05

# ===========================================
# BROWSER AUTOMATION
# ===========================================
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# ===========================================
# COOPERATIVE / FEDERATION
# ===========================================
FEDERATION_ENABLED=false
FEDERATION_API_URL="https://cooperative.supplybot.io"
FEDERATION_ORG_ID=""

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL="info"
LOG_FORMAT="json"
